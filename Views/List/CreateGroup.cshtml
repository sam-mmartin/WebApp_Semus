@model WebApp_Semus.Models.List.PharmacologicalGroupViewModel

@{
    ViewData["Title"] = "Adicionar Grupo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Adicionar</h1>
<h4>Grupo Farmacológico</h4>
<hr />

<form asp-action="CreateGroup">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label asp-for="SectionID" class="control-label"></label>
                <select asp-for="SectionID" asp-items="@ViewBag.Section" class="form-control"></select>
                <span asp-validation-for="SectionID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="form-group">
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                <input type="submit" value="Adicionar" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/CustomJS/bootstrap-select.min.js"></script>
    <script src="~/js/SemusScripts/seletcpicker.js"></script>
}
