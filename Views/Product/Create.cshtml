@model WebApp_Semus.Models.Stock.Product.ProductViewModel

@{
    ViewData["Title"] = "Adicionar Produto";
}

<h1>Novo</h1>
<h4>Produto - <small class="text-muted">Tipo: @Model.Type</small></h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Type" />

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <div class="form-group">
                <a asp-action="Index" asp-route-stockID="1" asp-route-type="@Model.Type" class="btn btn-secondary">
                    Voltar para Lista
                </a>
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

