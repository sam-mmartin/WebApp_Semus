@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<form id="account" method="post" class="form-signin">

    <div class="text-center mb-4">
        <img class="mb-4" src="~/Images/doctor.png" alt="" width="72" height="72">
        <h1 class="h3 mb-3 font-weight-normal">Entrar no Sistema</h1>
        <p>
            Para poder ter acesso a este recurso você precisa realizar o login
            <code>Voltar para Home</code>.
            <a href="https://caniuse.com/#feat=css-placeholder-shown">Acesse pelo Chrome, Safari, and Firefox.</a>
        </p>
        <div asp-validation-summary="All" class="text-danger"></div>
    </div>

    <div class="form-label-group">
        <span asp-validation-for="Input.Email" class="text-danger"></span>
        <input asp-for="Input.Email" class="form-control" placeholder="Email" />
        <label asp-for="Input.Email"></label>
    </div>

    <div class="form-label-group">
        <span asp-validation-for="Input.Password" class="text-danger"></span>
        <input asp-for="Input.Password" class="form-control" placeholder="Senha" />
        <label asp-for="Input.Password"></label>
    </div>

    <div class="form-group">
        <p>
            <a id="forgot-password" asp-page="./ForgotPassword">Esqueceu a senha?</a>
        </p>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-lg btn-primary btn-block">Entrar</button>
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
